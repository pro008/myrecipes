<%= render 'shared/errors', obj: @recipe %>

<div class="row">
    <div class="col-sm-12">
        <%= form_for(@recipe, :html => {class: "form-horizontal", role: "form"}) do |f| %>
            <div class="form-group">
                <div class="control-label col-sm-2">
                    <%= f.label :name %>
                </div>
                <div class="col-sm-8">
                    <%= f.text_field :name, class: "form-control", placeholder: "Name of the reipce", autofocus: true %>
                </div>
            </div>
            <div class="form-group">
                <div class="control-label col-sm-2">
                    <%= f.label :description %>
                </div>
                <div class="col-sm-8">
                    <%= f.text_area :description, row: 10, class: "form-control", placeholder: "Enter step of recipe" %>
                </div>
            </div>
            
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <%= f.submit class: "btn btn-lg btn-xlarge" %>
                </div>
            </div>

        <% end %>
        <div class="col-sm-5 col-sm-offset-4 colormatch">
            [ <%= link_to "Cancel request and return to recipes listing", recipes_path, id:"cancel_panel" %> ]
        </div>
    </div>
</div>
